FoamFile
{
    format      ascii;
    class       dictionary;
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    p
    {
        solver          GAMG;
        tolerance       1e-8;
        relTol          0.01;
        smoother        DIC;
        nPreSweeps      0;
        nPostSweeps     2;
        nFinestSweeps   2;
    }

    "(U|k|omega|h)"
    {
        solver          PBiCGStab;
        preconditioner  DILU;
        tolerance       1e-10;
        relTol          0.1;
    }
}

PIMPLE
{
    nOuterCorrectors      1;        // PIMPLE in SIMPLE mode
    nCorrectors           1;
    nNonOrthogonalCorrectors 0;

    residualControl
    {
        p               1e-6;
        U               1e-5;
        "(k|omega|h)"   1e-5;
    }
}

relaxationFactors
{
    fields
    {
        p               0.3;
        rho             0.01;
    }

    equations
    {
        U               0.7;
        h               0.7;
        "(k|omega)"     0.7;
    }
}

